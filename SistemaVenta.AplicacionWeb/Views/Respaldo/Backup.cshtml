@{
    ViewData["Title"] = "Respaldo de Base de Datos";
}

<h2>Respaldo de la base de datos</h2>

<div>
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }
</div>

<form asp-action="BackupPost" method="post">
    <p>El respaldo se guardará en la carpeta <strong>/Backups</strong>.</p>
    <button type="submit" class="btn btn-primary">Crear respaldo</button>
</form>
